<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>To Do app</title>
<style>
    .a1{
        align-items: center;
    }
    .a2{
        background-color: rgb(111, 255, 111);
    }
    .style1{
        background-color: rgb(111, 255, 111);
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <form action="save" method="post">
        <div class="container">
<div class="m-4">
    <div class="text-center">
    <label class="form-label justify-content-md-between" for="inputPassword" text-><b><h1>Enter Task</h1></b></label>
</div>
    <input type="text" class="form-control" id="txt" name="txt">
    <div class="my-5 text-center">
    <button type="submit" class="btn btn-success btn-lg">Add</button>
</div>
</div>
</div>
</form>
<div class="m-4">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sl No.</th>
                <th>Task</th>
                <th>Date</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            <%
            var i=1
                details.forEach((e)=>{
                    var c='';
                    if(e.status==true)
                    c='style1'
             %>   
                    <tr class="<%=c%>">
                        <td><%=i%></td>
                        <td><%=e.txt%></td>
                        <td><%=e.tm%></td>
                       <td><a href="del?id=<%=e._id%>"><i class="fa fa-trash"></i></a></td>
                       <td><a href="done?txt=<%=e.txt%>"><i class="fa fa-check"></i></td>
                    </tr>
             <%
             i++;
                })
                %>
        </tbody>
    </table>

</body>
</html>